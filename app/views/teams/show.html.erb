<%= render "shared/header" %>

<div class="show-main-wrapper">
  <div class="top-height"></div>
  <div class="show-container">
    <div class="profiles">
      <% if @team.image.attached? %>
        <%= image_tag @team.image.variant(resize: "200x180"), class: "team-logo" %>
      <%else%>
        <%= image_tag "noimage.png", class: "team-logo" %>  <%#画像がなければデフォルト画像の表示 %>
      <%end%>
      <% if team_signed_in? && current_team.id == @team.id %>
        <div class="btn-container">
          <%= link_to "編集", edit_team_path(@team.id), class: "show-btn team-edit" %>
          <%= link_to "選手編集", "#", class: "show-btn member-edit" %>
        </div> 
      <%end%>
      <div class="profile">
        <div class="left-pro">
          チーム名:
        </div>
        <div class="right-pro">
          <%= @team.name %>
        </div>
      </div>
      <div class="profile">
        <div class="left-pro">
          代表者名:
        </div>
        <div class="right-pro">
          <%= @team.rep_name %>
        </div>
      </div>
        <div class="btn-container">
          <%= link_to "選手一覧", team_members_path(@team), class: "show-btn member-index" %>
        </div> 
    </div>  
  </div>
</div>

<%= render 'shared/footer' %>
<%= render "shared/main_header" %>

<div class="top-height"></div>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner'>
      <h5>チームの編集</h5>
    </div>
    <div class='account-page'>
      <% if @team.errors.any? %>
        <div class="errors-container">
          <%= render "devise/shared/error_messages", resource: @team%>
        </div>
        <%end%>
      <%= form_with model: @team, url: team_path(params[:id]), method: :put, local: true do |f|%>
        <div class='field'>
          <div class='field-label'>
            チームロゴ
          </div>
          <div class='field-input'>
            <%= f.file_field :image%>
          </div>
        </div>  
        <div class='field'>
          <div class='field-label'>
            チーム名
          </div>
          <div class='field-input'>
            <%= f.text_field :name, autofocus: true, maxlength: 15%>
          </div>
          <div class='field-label'>
            代表者名
          </div>
          <div class='field-input'>
            <%= f.text_field :rep_name %>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label :email%>
          </div>
          <div class='field-input'>
            <%= f.email_field :email%>
          </div>
        </div>
        <div class='action'>
          <%= f.submit "編集", class: 'btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer" %>

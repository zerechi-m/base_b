<%= render "shared/main_header" %>

<div class="show-main-wrapper">
  <div class="top-height"></div>
  <div class="show-container">
    <div class="profiles">
      <% if @member.mem_image.attached? %>
        <%= image_tag @member.mem_image.variant(resize: "200x180"), class: "team-logo" %>
      <%else%>
        <%= image_tag "noimage.png", class: "team-logo" %>  <%#画像がなければデフォルト画像の表示 %>
      <%end%>
      <% if team_signed_in? && current_team.id == @member.team_id %>
        <div class="btn-container">
          <%= link_to "選手編集", edit_team_member_path(@member.team_id, @member.id), class: "show-btn member-edit" %>
          <%= link_to "選手削除", team_member_path(@member.team_id, @member.id), method: :delete, data: {confirm: '削除しますか?' }, class: "show-btn delete-edit" %>
        </div>
        <div class="btn-container">
          <%= link_to "選手一覧", team_members_path(@member.team_id), class: "show-btn member-index" %>
        </div> 
      <%else%>
        <div class="btn-container">
          <%= link_to "選手一覧", team_members_path(@member.team_id), class: "show-btn member-index" %>
        </div> 
      <%end%>
      <div class="profile">
        <div class="left-pro">
          選手名:
        </div>
        <div class="right-pro">
          <%= @member.name %>
        </div>
      </div>
      <div class="profile">
        <div class="left-pro">
          ポジション:
        </div>
        <div class="right-pro">
          <%= @member.position.name %>
        </div>
      </div>
      <div class="profile">
        <div class="left-pro">
          背番号:
        </div>
        <div class="right-pro">
          <%= @member.uni_no %>
        </div>
      </div>
      <div class="profile">
        <div class="left-pro">
          投打:
        </div>
        <div class="right-pro">
          <%= @member.dominant_hand.name %>
        </div>
      </div>
      <div class="profile">
        <div class="left-pro">
          野球部歴:
        </div>
        <div class="right-pro">
          <%= @member.base_hist.name %>
        </div>
      </div>
    </div>  
  </div>
</div>

<%= render 'shared/footer' %>